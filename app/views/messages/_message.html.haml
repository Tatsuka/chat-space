.message
  .messege__upper-info
    .messege__upper-info__talker
      = message.user.name
    .messege__upper-info__date 
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .messege__text
    - if message.content.present?
      .messege__text__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?





